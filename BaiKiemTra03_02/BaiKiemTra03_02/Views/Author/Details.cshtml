@model BaiKiemTra03_02.Models.Author

<h2>Chi tiết thông tin tác giả</h2>

<div class="form-group">
    <label>Mã Tác Giả</label>
    <p class="form-control-static">@Model.AuthorId</p>
</div>
<div class="form-group">
    <label>Tên Tác Giả</label>
    <p class="form-control-static">@Model.AuthorName</p>
</div>
<div class="form-group">
    <label>Quốc Tịch</label>
    <p class="form-control-static">@Model.Nationality</p>
</div>
<div class="form-group">
    <label>Năm Sinh</label>
    <p class="form-control-static">@Model.BirthYear</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.AuthorId" class="btn btn-primary">Chỉnh sửa</a> |
<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
