@model BaiKiemTra03_02.Models.Author

<h2>Chỉnh sửa thông tin tác giả</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label for="AuthorName">Tên Tác Giả</label>
        <input type="text" class="form-control" asp-for="AuthorName" />
    </div>
    <div class="form-group">
        <label for="Nationality">Quốc Tịch</label>
        <input type="text" class="form-control" asp-for="Nationality" />
    </div>
    <div class="form-group">
        <label for="BirthYear">Năm Sinh</label>
        <input type="number" class="form-control" asp-for="BirthYear" />
    </div>
    <input type="hidden" asp-for="AuthorId" />
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
