@model BaiKiemTra03_02.Models.Book

<h2>Chỉnh sửa thông tin sách</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label for="Title">Tiêu Đề</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label for="PublicationYear">Năm Xuất Bản</label>
        <input type="number" class="form-control" asp-for="PublicationYear" />
    </div>
    <div class="form-group">
        <label for="Genre">Thể Loại</label>
        <input type="text" class="form-control" asp-for="Genre" />
    </div>
    <div class="form-group">
        <label for="AuthorId">Tác Giả</label>
        <select class="form-control" asp-for="AuthorId" asp-items="ViewBag.AuthorId"></select>
    </div>
    <input type="hidden" asp-for="BookId" />
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
