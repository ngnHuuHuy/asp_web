@model IEnumerable<BaiKiemTra03_02.Models.Book>

<h2>Danh sách sách</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Sách</th>
            <th>Tiêu Đề</th>
            <th>Năm Xuất Bản</th>
            <th>Thể Loại</th>
            <th>Tác Giả</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.PublicationYear</td>
                <td>@book.Genre</td>
                <td>@book.Author.AuthorName</td> <!-- Hiển thị tên tác giả -->
                <td>
                    <a asp-action="Edit" asp-route-id="@book.BookId">Chỉnh sửa</a> |
                    <a asp-action="Details" asp-route-id="@book.BookId">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@book.BookId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Thêm sách mới</a>
