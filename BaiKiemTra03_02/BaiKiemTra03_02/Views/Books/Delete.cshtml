@model BaiKiemTra03_02.Models.Book

<h2>Xóa sách</h2>

<h3>Bạn có chắc chắn muốn xóa cuốn sách này?</h3>
<div>
    <h4>Sách</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Mã Sách
            </dt>
            <dd class="col-sm-10">
                @Model.BookId
            </dd>
            <dt class="col-sm-2">
                Tiêu Đề
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                Năm Xuất Bản
            </dt>
            <dd class="col-sm-10">
                @Model.PublicationYear
            </dd>
            <dt class="col-sm-2">
                Thể Loại
            </dt>
            <dd class="col-sm-10">
                @Model.Genre
            </dd>
            <dt class="col-sm-2">
                Tác Giả
            </dt>
            <dd class="col-sm-10">
                @Model.Author.AuthorName
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <button type="submit" class="btn btn-danger">Xóa</button> |
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
